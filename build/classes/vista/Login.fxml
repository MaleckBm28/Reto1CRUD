<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="320.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.LoginController">

    <children>
        <Label layoutX="130.0" layoutY="40.0" text="Inicio de Sesión">
            <font>
                <Font name="Cambria" size="24.0" />
            </font>
        </Label>

        <Label layoutX="70.0" layoutY="110.0" text="Email:" />
        <TextField fx:id="txtEmail" layoutX="150.0" layoutY="105.0" prefWidth="180.0" />

        <Label layoutX="70.0" layoutY="155.0" text="Contraseña:" />
        <PasswordField fx:id="txtPassword" layoutX="150.0" layoutY="150.0" prefWidth="180.0" />

        <Button fx:id="btnLogin" layoutX="150.0" layoutY="210.0" prefWidth="100.0" text="Iniciar Sesión"
                onAction="#onLogin">
            <font>
                <Font name="Cambria" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
