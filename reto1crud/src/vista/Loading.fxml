<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
    
    <!-- Spinner giratorio -->
    <ProgressIndicator progress="-1.0" prefWidth="80" prefHeight="80"/>
    
    <!-- Texto debajo del spinner -->
    <Label text="Cargando, espere un momento..." 
           style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
</VBox>
