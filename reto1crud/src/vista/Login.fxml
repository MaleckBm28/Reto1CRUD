<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controlador.LoginController"
            prefHeight="300.0" prefWidth="400.0">

    <children>
        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="50.0">

            <Label text="Iniciar Sesión" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="txtCorreo" promptText="Correo electrónico"/>
            <PasswordField fx:id="txtPassword" promptText="Contraseña"/>

            <Button text="Entrar" onAction="#handleLogin" prefWidth="150"/>
            <Label fx:id="lblMensaje" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
